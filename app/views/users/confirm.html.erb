<h2>Sign Up Confirmation</h2>
</br>
<h3>Are your sure these values are correct?</h3>

<div class="row">
	<div class="col-md-8">
		<div class="form-group">
			<p><strong>Name:</strong> <%= @user.name %></p>
			<p><strong>Email:</strong> <%= @user.email %></p>
		</div>
	</div>
	<div class="col-md-5">
		<%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
	</div>
	<div class="col-md-4">
		<div class="button">
			<%= button_to "No", {controller: "users", action: "new"} ,class: 'btn btn-failure', :method => :get %>
		</div>
	</div>
</div>